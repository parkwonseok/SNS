<div class="container">
  <h2>회원정보 수정</h2>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  
    <div class="field">
      <%= f.label :이메일 %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
  
    <div class="field">
      <%= f.label :비밀번호 %>   (<%= @minimum_password_length %> 글자 이상, 빈칸으로 두시면 변경되지 않습니다.) <br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
      <% end %>
    </div>
  
    <div class="field">
      <%= f.label :비밀번호확인 %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    
    <div class="field">
      <%= f.label :이름 %><br />
      <%= f.text_field :name %>
    </div>
  
    <div class="field">
      <%= f.label :현재비밀번호 %><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>
    
    <div class="field">
      <%= f.label "프로필 사진" %>
      <br /><br />
      <%= f.file_field :avatar %>
      <hr />
    </div>
    
    <div class="actions">
      <br />
      <button type="submit" class="btn btn-primary btn-lg blue darken-4">수정하기</button>
    </div>
  <% end %>
  <br /><br />
  ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
  <h3>회원탈퇴</h3>
  
  <p><%= button_to "회원탈퇴", registration_path(resource_name), data: { confirm: "정말 회원탈퇴 하시겠습니까?" }, method: :delete %></p>
  
  <%= link_to "이전 페이지", :back %>
</div>
